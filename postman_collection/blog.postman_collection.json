							"if (Array.isArray(responseData) && responseData.length > 0) {\r",
							"    let postId = responseData[0]._id;\r",
							"    pm.environment.set(\"id\", postId);\r",
							"    console.log(\"Saved id:\", postId);\r",
							"    let title = responseData[0].title;\r",
							"    pm.environment.set(\"title\", title);\r",
							"    console.log(\"Saved title:\", title);\r",
							"} else {\r",
							"    console.log(\"Response not in expected format:\", responseData);\r",
							"}"
